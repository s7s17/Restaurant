@using Restaurant.Models
@model IEnumerable<Restaurant.Models.Table>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TableCapacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.TableNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableCapacity)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-tablenum="@item.TableNumber">Edit</a> |
                    <a asp-action="Delete" asp-route-tablenum="@item.TableNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
